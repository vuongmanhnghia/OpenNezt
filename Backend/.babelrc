{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    [
      "module-resolver",
      {
        "alias": {
          "@": "./src"
        }
      }
    ]
  ],
  "ignore": ["./build", "./node_modules"],
  "comments": false,
  "env": {
    "build": {
      "sourceMaps": true
    }
  }
}
